<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'festina-watch.png' %>
      <div class='carousel-caption'>
        <% if user_signed_in? %>
        <h1 class='display-2'>Watchly</h1>
        <h3>Review our fine collection of luxury watches for every style!</h3>
        <% else %>
        <h1 class='display-2'>Watchly</h1>
        <h3>Luxury watches for every style!</h3>
        <%= link_to "Sign up", new_user_registration_path, class:'btn btn-outline-light btn-lg' %>
        <% end %>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'breitling.png', class: "carousel-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'roger-dubois.png', class: "carousel-img" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


