<div class='last-three mt-4'>
  <div class="container">
    <div class="cards">
    <%  @watches.last(3).each do |watch| %>
    <%= link_to watch_path(watch) do %>
      <div class="card-trip">
        <% if watch.photos.attached? %>
        <%= cl_image_tag watch.photos.last.key %>
        <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= watch.brand %></h2>
              <p><em><%= watch.model %></em></p>
            </div>
          <h2 class="card-trip-pricing"><%= watch.year %></h2>

        </div>
      </div>
    <% end %>
    <% end %>
    </div>
  </div>
</div>

