<div class="card-box container">
  <div class="card-trip-show">
    <%= cl_image_tag @watch.photos.last.key %>
    <div class="card-trip-infos">
      <div>
        <h4><%= @watch.brand %></h4>
        <h2><%= @watch.model %></h2>
        <h6><%= @watch.year %></h6>
        <p><%= @watch.description %></p>
      </div>
      <h2 class="card-trip-pricing">Â£99.99</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
    <%= simple_form_for [@watch, @booking] do |f| %>
      <div class="booking-form p-3">
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker start-date-left"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
      </div>
      <%= f.button :submit, class: 'btn-dark booking-btn w-100' %>
    <% end %>
  </div>
</div>
